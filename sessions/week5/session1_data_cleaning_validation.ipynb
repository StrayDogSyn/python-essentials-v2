   "source": [
    "from datetime import datetime\n",
    "\n",
    "def parse_date(date_string):\n",
    "    try:\n",
    "        return datetime.strptime(date_string, '%m/%d/%Y').date()\n",
    "    except ValueError:\n",
    "        return None\n",
    "\n",
    "date_strings = ['07/15/2024', '15/07/2024', 'not a date', '02/30/2023']\n",
    "parsed_dates = [parse_date(ds) for ds in date_strings]\n",
    "print(parsed_dates)"
