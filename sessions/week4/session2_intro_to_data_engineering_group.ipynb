  {"cell_type":"code","execution_count":null,"metadata":{},"outputs":[],"source":["import json, csv","lines = [json.dumps({'name':'ana','score':90}), json.dumps({'name':'bob','score':70})]","with open('w4_group.jsonl','w') as f:","    for line in lines:","        f.write(line+'\n')","with open('w4_group.jsonl','r') as f:","    rows = [json.loads(x) for x in f.read().splitlines()]","with open('w4_group.csv','w',newline='') as f:","    w = csv.DictWriter(f, fieldnames=['name','score'])","    w.writeheader()","    w.writerows(rows)","print(rows)"]},
     "source": [
      "**Task:** Filter rows to keep only scores >= 80 before writing CSV."
     ]
    },
    {
     "cell_type": "code",
     "execution_count": null,
     "metadata": {},
     "outputs": [],
     "source": [
      "import json, csv\n",
      "lines = [json.dumps({'name':'ana','score':90}), json.dumps({'name':'bob','score':70})]\n",
      "with open('w4_group.jsonl','w') as f:\n",
      "    for line in lines:\n",
      "        f.write(line+'\\n')\n",
      "\n",
      "with open('w4_group.jsonl','r') as f:\n",
      "    rows = [json.loads(x) for x in f.read().splitlines()]\n",
      "\n",
      "filtered_rows = [row for row in rows if row['score'] >= 80]\n",
      "\n",
      "with open('w4_group.csv','w',newline='') as f:\n",
      "    w = csv.DictWriter(f, fieldnames=['name','score'])\n",
      "    w.writeheader()\n",
      "    w.writerows(filtered_rows)\n",
      "\n",
      "print(filtered_rows)"
     ]
    },
